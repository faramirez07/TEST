@model Test.Model.Migration.ClientM
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actualizar Cliente</h2>

<form method="post" action="@Url.Action("Update","Client")">
    <div class="form-group" style="visibility:hidden">
        @Html.TextBoxFor(x => x.IdClient, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Age</label>
        @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Nationality</label>
        @Html.TextBoxFor(x => x.Nationality, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Status</label>
        @Html.CheckBoxFor(model => model.Active)
    </div>
    <div class="form-group">
        <label>User Create</label>
        @Html.TextBoxFor(x => x.UserCreate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Date Create</label>
        @Html.TextBoxFor(x => x.DateCreate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn-success" value="Send" />
        <a href="@Url.Action("Index", "Client")" class="btn btn-info riht">Back</a>
    </div>


</form>
